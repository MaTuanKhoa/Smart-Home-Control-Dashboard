<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiProject1.MainPage">

    <Grid Padding="16" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="4">
            <Label Text="Smart Home Dashboard" FontSize="24" FontAttributes="Bold"/>
            <Label Text="Living Room Overview" FontSize="14"/>
        </VerticalStackLayout>

        <!-- Weather -->
        <Frame Grid.Row="1" Padding="16" CornerRadius="16">
            <Label Text="Weather Card"/>
        </Frame>

        <!-- Device Grid -->
        <Grid Grid.Row="2" RowSpacing="16" ColumnSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Frame Grid.Row="0" Grid.Column="0" Padding="12" CornerRadius="12">
                <VerticalStackLayout>
                    <Label Text="Light"/>
                    <Switch/>
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="0" Grid.Column="1" Padding="12" CornerRadius="12">
                <VerticalStackLayout>
                    <Label Text="Fan"/>
                    <Switch/>
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="1" Grid.Column="0" Padding="12" CornerRadius="12">
                <VerticalStackLayout>
                    <Label Text="AC"/>
                    <Switch/>
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Row="1" Grid.Column="1" Padding="12" CornerRadius="12">
                <VerticalStackLayout>
                    <Label Text="Security"/>
                    <Switch/>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <Label Grid.Row="3" Text="Energy Usage Section"/>
    </Grid>
</ContentPage>
