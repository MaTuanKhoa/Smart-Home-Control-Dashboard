<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiPro.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Colors -->
            <Color x:Key="PrimaryColor">#4B2BFF</Color>
            <Color x:Key="SecondaryColor">#77A6FF</Color>
            <Color x:Key="PageBg">#F0F6FB</Color>
            <Color x:Key="CardBg">#FFFFFF</Color>
            <Color x:Key="TextPrimary">#0F1722</Color>
            <Color x:Key="TextMuted">#7B8790</Color>
            <Color x:Key="IconBg">#F6F8FA</Color>

            <!-- Status pill colors -->
            <Color x:Key="OnBg">#E8F7EE</Color>
            <Color x:Key="OnText">#15803D</Color>
            <Color x:Key="OffBg">#FEE2E2</Color>
            <Color x:Key="OffText">#B91C1C</Color>

            <!-- Font sizes -->
            <x:Double x:Key="TitleSize">22</x:Double>
            <x:Double x:Key="SectionSize">18</x:Double>
            <x:Double x:Key="BodySize">13</x:Double>
            <x:Double x:Key="SmallSize">12</x:Double>

        </ResourceDictionary>
    </Application.Resources>
</Application>
